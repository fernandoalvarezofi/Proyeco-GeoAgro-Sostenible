  <script>
    // Mock data for simulation
    const fieldData = {
      NDVI: { value: 0.78, trend: 4, status: 'Saludable' },
      NDMI: { value: 0.42, trend: -2, status: 'Estrés Moderado' },
      Productivity: { value: 6.4, trend: 1.8, status: 'Estable' }
    };

    function toggleAccordion(element) {
      const item = element.parentElement;
      item.classList.toggle('active');
    }

    function openModal() {
      document.getElementById('modal').classList.add('active');
    }

    function closeModal() {
      document.getElementById('modal').classList.remove('active');
    }

    function switchLayer(name) {
      document.getElementById('currentLayer').textContent = name;
      const el = document.querySelector('.mock-map');
      el.style.transition = 'filter .6s ease, transform .4s ease';
      el.style.transform = 'scale(1.01)';
      setTimeout(() => el.style.transform = 'scale(1)', 420);
    }

    function scrollToSection(id) {
      const el = document.getElementById(id);
      if (el) {
        el.scrollIntoView({ behavior: 'smooth', block: 'start' });
      } else {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      }
    }

    function applyAction(action) {
      if (action === 'Riego VR') {
        fieldData.NDMI.value = 0.48;
        fieldData.NDMI.trend = 3;
        fieldData.NDMI.status = 'Mejorando';
      } else if (action === 'Fertilización') {
        fieldData.NDVI.value = 0.82;
        fieldData.NDVI.trend = 6;
        fieldData.NDVI.status = 'Óptimo';
      } else if (action === 'Mover Ganado') {
        fieldData.Productivity.value = 6.6;
        fieldData.Productivity.trend = 2.5;
        fieldData.Productivity.status = 'Creciente';
      }
      updateStats();
      alert(`${action} aplicado (simulación). Datos actualizados.`);
    }

    function updateStats() {
      document.getElementById('ndvi-value').textContent = fieldData.NDVI.value;
      document.getElementById('ndvi-trend').textContent = `Tendencia ${fieldData.NDVI.trend}%`;
      document.getElementById('ndmi-value').textContent = fieldData.NDMI.value;
      document.getElementById('ndmi-trend').textContent = `Tendencia ${fieldData.NDMI.trend}%`;
      document.getElementById('prod-value').textContent = `${fieldData.Productivity.value} t/ha`;
      document.getElementById('prod-trend').textContent = `Proy. ${fieldData.Productivity.trend}%`;
      document.getElementById('modal-stats').textContent = `NDVI: ${fieldData.NDVI.value} · NDMI: ${fieldData.NDMI.value} · Rend: ${fieldData.Productivity.value} t/ha`;
    }
  </script>
</body>
</html>
